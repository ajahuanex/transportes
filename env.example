# ===========================================
# Sistema de Gestión de Transportes - DRTC Puno
# Variables de Entorno
# ===========================================

# ===========================================
# CONFIGURACIÓN BÁSICA
# ===========================================
APP_NAME=Sistema de Gestión de Transportes - DRTC Puno
VERSION=1.0.0
DEBUG=true

# ===========================================
# SERVIDOR
# ===========================================
HOST=0.0.0.0
PORT=8000

# ===========================================
# CORS
# ===========================================
ALLOWED_HOSTS=http://localhost:4200,http://localhost:3000,http://127.0.0.1:4200

# ===========================================
# BASE DE DATOS MONGODB
# ===========================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=drtc_puno
MONGODB_MAX_POOL_SIZE=10

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# AUTENTICACIÓN JWT
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production-please-use-a-strong-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# ARCHIVOS Y STORAGE
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# ===========================================
# AWS S3 (OPCIONAL - PARA PRODUCCIÓN)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ===========================================
# EMAIL (OPCIONAL)
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# ===========================================
# INTEGRACIONES EXTERNAS (OPCIONAL)
# ===========================================
# RENIEC - Verificación de DNI
RENIEC_API_URL=
RENIEC_API_KEY=

# SUNAT - Verificación de RUC
SUNAT_API_URL=
SUNAT_API_KEY=

# ===========================================
# CONFIGURACIÓN ESPECÍFICA DEL SISTEMA
# ===========================================
REGION=PUNO
ENTIDAD=DRTC_PUNO

# ===========================================
# REPORTES
# ===========================================
REPORTS_DIR=./reports

# ===========================================
# NOTIFICACIONES
# ===========================================
NOTIFICATION_VENCIMIENTO_ANTICIPADO=30
NOTIFICATION_MAX_RETRY=3

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=

# ===========================================
# SEGURIDAD
# ===========================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
# Descomentar para desarrollo local
# MONGODB_URL=mongodb://admin:password123@localhost:27017/drtc_puno?authSource=admin
# REDIS_URL=redis://localhost:6379
# DEBUG=true

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================
# Descomentar y configurar para producción
# DEBUG=false
# SECRET_KEY=your-production-secret-key-here
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/drtc_puno
# REDIS_URL=redis://username:password@redis-host:6379
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name 